# Application Settings
APP_NAME="PHP Project"
APP_ENV=development # development, testing, production
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=UTC
APP_KEY= # Random string used for encryption

# Database Settings
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=my_database
DB_USERNAME=root
DB_PASSWORD=

# Redis Settings (if using Redis for cache/session)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Settings
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=null
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 Settings (if using S3 for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=

# File Storage Settings
FILESYSTEM_DRIVER=local
PUBLIC_UPLOADS_FOLDER=uploads
PRIVATE_UPLOADS_FOLDER=private

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120 # In minutes

# Logging Configuration
LOG_CHANNEL=stack
LOG_LEVEL=debug # debug, info, warning, error, critical

# API Keys for Third-Party Services
GOOGLE_API_KEY=
STRIPE_KEY=
STRIPE_SECRET=

# Other Settings
CACHE_DRIVER=file
QUEUE_CONNECTION=sync
BROADCAST_DRIVER=log